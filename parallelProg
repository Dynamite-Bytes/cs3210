#include<stdio.h>
#include<omp.h>
#include<stdlib.h>
int main(int argc,char** argv){
//int id, numThreads;
printf("\n");
if(argc>1){
omp_set_num_threads(atoi(argv[1]));
}
#pragma omp parallel
{
 int id = omp_get_thread_num();
 int numThreads = omp_get_num_threads();
printf("Hello from thread %d of %d\n",numThreads);
}
printf("\n");
return 0;
}
